{
  "version": 2,
  "buildCommand": "echo 'No build needed for serverless functions'",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/follow-ups",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/process-campaigns",
      "schedule": "0 */6 * * *"
    }
  ]
}